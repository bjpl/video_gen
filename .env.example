# Video Generation System - Environment Configuration
# ===================================================
# Copy this file to .env and fill in your values

# =============================================================================
# Application Settings
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Server port (default: 8000)
PORT=8000

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# AI API Keys (Optional - for AI-enhanced features)
# =============================================================================

# Claude API (Anthropic) - For AI-enhanced narration and translation
# Get your API key from: https://console.anthropic.com/
# Leave empty to use template-based narration only
ANTHROPIC_API_KEY=

# Claude model (default: claude-3-5-sonnet-20241022)
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# OpenAI API (Optional) - Alternative AI provider
# OPENAI_API_KEY=

# =============================================================================
# YouTube Features (Optional)
# =============================================================================

# YouTube Data API v3 Key - Required for YouTube video search
# Get from: https://console.cloud.google.com/apis/credentials
# YOUTUBE_API_KEY=

# YouTube transcript language preference
YOUTUBE_LANGUAGE=en

# =============================================================================
# Performance Settings
# =============================================================================

# Enable GPU acceleration (true/false)
# Requires NVIDIA GPU with NVENC support
GPU_ENABLED=true

# Enable parallel scene processing (true/false)
PARALLEL_PROCESSING=true

# Maximum parallel workers (0 = auto-detect)
MAX_WORKERS=0

# Quality preset: draft, standard, high, ultra
QUALITY_PRESET=standard

# =============================================================================
# Path Configuration
# =============================================================================

# Base directories (relative to project root)
OUTPUT_DIR=outputs
CACHE_DIR=cache
INPUT_DIR=inputs
LOG_DIR=logs

# FFmpeg Path - Leave blank for automatic detection
FFMPEG_PATH=

# =============================================================================
# Video Generation Settings
# =============================================================================

# Default video resolution (1920x1080, 1280x720, etc.)
VIDEO_WIDTH=1920
VIDEO_HEIGHT=1080

# Default video framerate (24, 30, 60)
VIDEO_FPS=30

# Default voice (male, male_warm, female, female_friendly)
DEFAULT_VOICE=male

# Default accent color (blue, purple, green, orange, red)
DEFAULT_ACCENT_COLOR=blue

# Default target language (ISO 639-1 code)
DEFAULT_LANGUAGE=en

# =============================================================================
# Audio Settings
# =============================================================================

# Audio sample rate (Hz)
AUDIO_SAMPLE_RATE=44100

# Audio bitrate (kbps)
AUDIO_BITRATE=128

# =============================================================================
# FFmpeg Settings
# =============================================================================

# Video codec (h264_nvenc for GPU, libx264 for CPU)
VIDEO_CODEC=h264_nvenc

# Fallback codec if GPU not available
FALLBACK_CODEC=libx264

# Video bitrate (Mbps)
VIDEO_BITRATE=8

# Encoding preset: ultrafast, superfast, veryfast, faster, fast, medium, slow
ENCODING_PRESET=fast

# =============================================================================
# Content Parsing Settings
# =============================================================================

# Maximum scenes per video
MAX_SCENES=20

# Target duration for auto-generated videos (seconds)
TARGET_DURATION=120

# =============================================================================
# Web UI Configuration
# =============================================================================

# FastAPI server settings
API_HOST=0.0.0.0
API_PORT=8000

# Auto-reload on code changes (development only)
AUTO_RELOAD=true

# Debug mode (never use in production)
DEBUG=false

# Show detailed error pages
SHOW_ERROR_DETAILS=false

# =============================================================================
# Translation Settings
# =============================================================================

# Translation method: claude (high quality) or template (free)
TRANSLATION_METHOD=claude

# Supported languages (comma-separated)
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ja,ko,zh,ar

# =============================================================================
# Rate Limiting (Future Multi-User Deployment)
# =============================================================================

# Requests per minute per user
RATE_LIMIT_PER_MINUTE=10

# Maximum concurrent jobs per user
MAX_CONCURRENT_JOBS=3

# =============================================================================
# Database (Future Multi-User Deployment)
# =============================================================================

# Database URL (PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/videogen

# =============================================================================
# Redis (Future Job Queue)
# =============================================================================

# Redis URL for job queue
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Security
# =============================================================================

# CSRF token secret - REQUIRED in production
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# IMPORTANT: Do NOT use default in production - validation will fail
CSRF_SECRET=

# Secret key for session encryption (future use)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# SECRET_KEY=

# CORS allowed origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# CSRF protection (NEVER disable in production)
# Only set to true for local testing
# CSRF_DISABLED=false

# =============================================================================
# Monitoring and Observability
# =============================================================================

# Enable metrics collection (true/false)
METRICS_ENABLED=true

# Metrics export interval (seconds)
METRICS_INTERVAL=60

# Sentry Error Tracking
# Get your DSN from: https://sentry.io/settings/projects/
# Leave empty to disable error tracking
# SENTRY_DSN=

# Sentry environment (auto-detected if not set)
# ENVIRONMENT=production

# Sentry release version (auto-detected from git or Railway)
# RELEASE_VERSION=

# Enable performance tracing (true/false)
# SENTRY_ENABLE_TRACING=true

# Performance sample rate (0.0 to 1.0)
# Lower in production to reduce overhead (e.g., 0.1 = 10% of transactions)
# SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# Cloud Storage Configuration
# =============================================================================

# Storage backend: local (default), s3, r2
# - local: Store files on local filesystem (ephemeral on Railway)
# - s3: AWS S3 storage (persistent, paid)
# - r2: Cloudflare R2 storage (persistent, cheaper than S3, no egress fees)
STORAGE_BACKEND=local

# Base URL for local storage (used when STORAGE_BACKEND=local)
# Example: http://localhost:8000/outputs or https://yourdomain.com/outputs
# OUTPUT_BASE_URL=

# AWS S3 Configuration (required when STORAGE_BACKEND=s3)
# Get credentials from: https://console.aws.amazon.com/iam/
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_BUCKET_NAME=
# AWS_REGION=us-east-1

# Cloudflare R2 Configuration (required when STORAGE_BACKEND=r2)
# Get credentials from: https://dash.cloudflare.com/ > R2 > Manage R2 API Tokens
# Note: R2 uses AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY for credentials
# AWS_ACCESS_KEY_ID=your_r2_access_key_id
# AWS_SECRET_ACCESS_KEY=your_r2_secret_access_key
# AWS_BUCKET_NAME=your_r2_bucket_name
# R2_ACCOUNT_ID=your_cloudflare_account_id
# R2_PUBLIC_DOMAIN=your-custom-domain.com (optional, otherwise uses R2.dev subdomain)

# Storage Cleanup Settings
# Maximum age of stored files before cleanup (days)
STORAGE_MAX_AGE_DAYS=7
